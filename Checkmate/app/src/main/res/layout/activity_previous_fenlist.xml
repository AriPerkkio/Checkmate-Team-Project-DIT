<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="16"
    android:padding="5dp">
<RelativeLayout
    android:background="#000000"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:layout_weight="9" >
        <fragment
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:name="com.theateam.checkmate.GameFragment"
            android:id="@+id/fragment2"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="#fcfcfc"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="7" >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/prevfenlistList"
            android:layout_above="@+id/btnPrevfenlistBack"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMP BUTTON\nBack"
            android:id="@+id/btnPrevfenlistBack"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPrevfenNext"
            android:src="@android:drawable/ic_media_next"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPrevfenPrev"
            android:src="@android:drawable/ic_media_previous"
            android:layout_alignTop="@+id/btnPrevfenNext"
            android:layout_toStartOf="@+id/btnPrevfenNext" />
    </RelativeLayout>

</LinearLayout>
