<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00"
        android:id="@+id/prevgamerowId"
        android:paddingRight="5dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GameMode"
        android:id="@+id/prevgamerowGamemode"
        android:textColor="@color/colorAccent"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/linearLayout"
        android:layout_alignEnd="@+id/prevgamerowDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OFF"
        android:id="@+id/prevgamerowLearnTool"
        android:textColor="@color/colorAccent"
        android:paddingRight="5dp"
        android:layout_alignTop="@+id/prevgamerowGamemode"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00-00-2016"
        android:id="@+id/prevgamerowDate"
        android:textColor="@color/colorAccent"
        android:paddingRight="5dp"
        android:layout_below="@+id/prevgamerowGamemode"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"></LinearLayout>
</RelativeLayout>